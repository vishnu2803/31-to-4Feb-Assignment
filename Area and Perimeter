package com.company;
import java.util.*;

public class GeeksterAssignment {
    public static void main(String[] args) {
//Length and breadth of a rectangle are 5 and 7 respectively. Write a program to calculate the area and perimeter of the rectangle.
   int Length,Breadth,area,Perimeter;
   Length = 5;
   Breadth = 7;
   area = Length*Breadth;
        System.out.println("area of rectangle is :- " + area);        // area of Rectangle

        //Perimeter of Rectangle

        Perimeter = 2*(Length+Breadth);
        System.out.println("Perimeter of Rectangle:-  " + Perimeter);
    }
}
