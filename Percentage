package com.company;
import java.util.*;

public class GeeksterAssignment {
    public static void main(String[] args) {
       // If the marks of Robert in three subjects are 78,45 and 62 respectively (each out of 100 ), write a program to calculate his total marks and percentage marks.
    int Subject1, Subject2 , Subject3,sum;
        Subject1 = 78;
        Subject2 = 45;               
        Subject3 = 62;
        sum = (Subject1+Subject2+Subject3);     //For marks
        System.out.println("Total marks Out of 300 is :- " + sum);
       //For Percentage
        float Percentage = sum/3f;
        System.out.println("Percentage is :- "+ Percentage );

    }
}
